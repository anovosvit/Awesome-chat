<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/size_0"
    app:strokeColor="@color/gray"
    app:strokeWidth="@dimen/size_1"
    app:cardCornerRadius="@dimen/size_10">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ok_hand"
            android:layout_marginTop="@dimen/spacing_20" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/Anymaster.Styles.MaterialTextView.Regular.14"
            android:id="@+id/tvOfferDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/spacing_14"
            android:text="@string/gets_offer" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/Anymaster.Styles.MaterialTextView.Medium.18"
            android:id="@+id/tvOfferPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/spacing_8"
            tools:text="â‚¬1 498,00" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/spacing_12" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/Anymaster.Styles.MaterialTextView.Regular.12"
            android:id="@+id/tvExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="@dimen/spacing_14"
            android:text="@string/deal_explanation" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>
